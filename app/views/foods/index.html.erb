<% content_for(:title, t('.title')) %>
<div class="mx-auto max-w-screen-lg">
  <%= render 'modal' %>
  <%= render 'shared/search_food_form', url: foods_path %>
  <div class="w-screen flex justify-center items-center my-10">
    <%= link_to t('.new_food'), new_food_path, class:"btn btn-primary mr-10"%>
  <%= link_to t('.groups'), groups_path, class:"btn btn-secondary" %>
  </div>
  <div class="grid w-full grid-cols-1 gap-2 mx-auto lg:grid-cols-3 z-10">
    <%= render @foods %>
  </div>
  <%= paginate @foods %>
</div>
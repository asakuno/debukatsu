<div class="max-w-sm rounded overflow-hidden shadow-lg">
  <%= @foods.each do |food| %>
  <% if food.image.present? %>
    <%= image_tag food.image_url(:small).to_s %>
  <% else %>
    <%= image_tag 'no_image.jpeg'  %>
  <% end %>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">
      <%= link_to food.food_name, food, class: "link link-primary" %>
    </div>
    <div class="text-gray-700 text-base">
      <%= food.calorie %>kcal<br>
      <%= food.price %>å††
      <% if current_user.own?(food) %>
        <td><%= link_to 'Edit', '#', class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', food_path(food), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary" %></td>
      <% end %>
    </div>
  </div>
  <div class="px-6 pt-4 pb-2">
    <% food.tag_list.each do |tag| %>
      <%= link_to tag, foods_path(food, tag_name: tag), class: "tag" %>
    <% end %>
  <% end %>
  </div>
</div>
<%= paginate @foods %>
<%= link_to 'NewFood', new_food_path, class:"btn btn-primary"%>
<%= link_to 'Groups', groups_path, class:"btn btn-secondary" %>
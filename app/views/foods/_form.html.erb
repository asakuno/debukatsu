<%= form_with(model: food, local: true) do |form| %>
  <div class="input-group-md">
    <%= form.label :food_name %>
    <%= form.text_field :food_name, class: "input input-bordered w-full max-w-xs" %>
  </div>

  <div class="input-group-md">
    <%= form.label :calorie %>
    <%= form.text_field :calorie, class: "input input-bordered w-full max-w-xs" %>kcal
  </div>

  <div class="input-group-md">
    <%= form.label :price %>
    <%= form.text_field :price, class: "input input-bordered w-full max-w-xs" %>å††
  </div>

  <div class ="file">
    <%= form.label :image_data %>
    <%= form.hidden_field :image, value: @food.cached_image_data %>
    <%= form.file_field :image, class: "file-input file-input-bordered file-input-primary w-full max-w-xs" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
<%= form_with(model: @user, url: profile_path, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :age %>
  <%= form.select :age, User.ages.keys.map {|k| [k, k]} %>

  <%= form.label :gender %>
  <%= form.select :gender, User.genders.keys.map {|k| [k, k]} %>

  <%= form.label :weight %>
  <%= form.select :weight, User.weights.keys.map {|k| [k, k]} %>

  <%= form.fields_for :profile do |profile_form| %>
    <%= profile_form.label :momentum %>
    <%= profile_form.number_field :momentum %>
  <% end %>

  <%= form.submit '更新する' %>
<% end %>

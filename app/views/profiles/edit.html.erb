<div class="max-w-md mx-auto bg-white">
  <h1 class="text-3xl font-bold mb-8">プロフィールを編集する</h1>
<%= form_with(model: @user, url: profile_path, local: true) do |form| %>
  <div class="mb-6">
    <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-6">
    <%= form.label :age, class: "block text-gray-700 font-bold mb-2" %>
    <div class="relative inline-block w-full text-gray-700">
      <%= form.select :age, User.ages.keys.map {|k| [k, k]}, {}, class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M2 10a8 8 0 1116 0 8 8 0 01-16 0zm8-7a1 1 0 00-1 1v3a1 1 0 102 0V4a1 1 0 00-1-1zm0 12a1 1 0 001-1v-3a1 1 0 10-2 0v3a1 1 0 001 1z" clip-rule="evenodd" />
        </svg>
      </div>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :gender, class: "block text-gray-700 font-bold mb-2" %>
    <div class="relative inline-block w-full text-gray-700">
      <%= form.select :gender, User.genders.keys.map {|k| [k, k]}, {}, class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M2 10a8 8 0 1116 0 8 8 0 01-16 0zm8-7a1 1 0 00-1 1v3a1 1 0 102 0V4a1 1 0 00-1-1zm0 12a1 1 0 001-1v-3a1 1 0 10-2 0v3a1 1 0 001 1z" clip-rule="evenodd" />
        </svg>
      </div>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :weight, class: "block text-gray-700 font-bold mb-2" %>
    <div class="relative inline-block w-full text-gray-700">
      <%= form.select :weight, User.weights.keys.map {|k| [k, k]}, {}, class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M2 10a8 8 0 1116 0 8 8 0 01-16 0zm8-7a1 1 0 00-1 1v3a1 1 0 102 0V4a1 1 0 00-1-1zm0 12a1 1 0 001-1v-3a1 1 0 10-2 0v3a1 1 0 001 1z" clip-rule="evenodd" />
        </svg>
      </div>
    </div>
  </div>

  <%= form.fields_for :profile do |profile_form| %>
    <div class="mb-6">
      <%= profile_form.label :momentum, class: "block text-gray-700 font-bold mb-2" %>
      <%= profile_form.number_field :momentum, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
  <%= form.submit '更新する', class: "btn btn-primary" %>
<% end %>
</div>

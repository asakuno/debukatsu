<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <h1 class="text-3xl font-bold">プロフィール</h1>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="username">
        ユーザー名
      </label>
      <span class="text-gray-700"><%= @user.name %></span>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="email">
        メールアドレス
      </label>
      <span class="text-gray-700"><%= @user.email %></span>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="created-at">
        登録日時
      </label>
      <span class="text-gray-700"><%= l @user.created_at %></span>
    </div>
    <% if !@user.guest? %>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="created-at">
        個人情報
      </label>
      <span class="text-gray-700">aaa</span>
    </div>
    <% end %>
    <div class="flex items-center justify-between">
      <%= link_to "Profile編集", edit_profile_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

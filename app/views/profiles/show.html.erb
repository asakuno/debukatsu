<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <h1 class="text-3xl font-bold">プロフィール</h1>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="username">
        ユーザー名
      </label>
      <span class="text-gray-700"><%= @user.name %></span>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="email">
        メールアドレス
      </label>
      <span class="text-gray-700"><%= @user.email %></span>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="created-at">
        登録日時
      </label>
      <span class="text-gray-700"><%= l @user.created_at %></span>
    </div>
    <% if @user.profile_complete? %>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          年齢
        </label>
        <span class="text-gray-700"><%= @user.age %></span>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          性別
        </label>
        <span class="text-gray-700"><%= @user.gender %></span>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          体重
        </label>
        <span class="text-gray-700"><%= @user.weight %></span>
      </div>
    <% else %>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          個人情報
        </label>
        <span class="text-gray-700">登録されていません</span>
      </div>
    <% end %>
    <div class="flex items-center justify-between">
      <%= link_to "Profile編集", edit_profile_path, class: "btn btn-primary" %>
      <%= link_to "profile", new_profile_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

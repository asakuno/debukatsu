<% content_for(:title, @user.name+t('.title')) %>
<div class="max-w-md mx-auto mt-10">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <h1 class="text-3xl font-bold">プロフィール</h1>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="username">
        ユーザー名
      </label>
      <span class="text-gray-700"><%= @user.name %></span>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="email">
        メールアドレス
      </label>
      <span class="text-gray-700"><%= @user.email %></span>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2" for="created-at">
        登録日時
      </label>
      <span class="text-gray-700"><%= l @user.created_at %></span>
    </div>
    <% if @user.profile_complete? && @user.profile.present? %>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          年齢
        </label>
        <span class="text-gray-700"><%= @user.age_i18n %></span>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          性別
        </label>
        <span class="text-gray-700"><%= @user.gender_i18n %></span>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          運動量
        </label>
        <span class="text-gray-700"><%= @user.weight_i18n %></span>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          目標体重
        </label>
        <% if @user.profile.present? %>
          <span class="text-gray-700">＋<%= @user.profile.momentum %>kg</span>
          <div class="mb-4">
            <label class="block text-gray-700 font-bold mb-2" for="created-at">
              あなたの1日に必要なカロリー
            </label>
            <span class="text-gray-700"><%= @user.profile.momentum * 240 + @user.required_calories %>kcal</span>
          </div>
        <% else %>
          <span class="text-gray-700">＋0kg</span>
        <% end %>
      </div>
    <% else %>
      <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2" for="created-at">
          個人情報
        </label>
        <span class="text-gray-700">登録されていません</span>
      </div>
    <% end %>
    <div class="flex items-center justify-between">
      <%= link_to "プロフィール編集", edit_mypage_profile_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
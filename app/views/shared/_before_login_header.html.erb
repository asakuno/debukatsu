<header>
<div class="navbar bg-original">
  <div class="flex-1">
    <%= link_to (t'defaults.title'), root_path,  class: "btn btn-ghost normal-case text-xl" %>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <li class="flex items-center flex-wrap justify-center">
        <%= link_to login_path, class: "nav-link mr-2" do %>
          <div style="display: flex; flex-direction: column; align-items: center;">
            <i class="fa-sharp fa-light fa-right-to-bracket" style="color: #000000;"></i>
            <p style="margin-top: 5px;"><%= t('defaults.login') %></p>
          </div>
        <% end %>
      </li>
      <li class="flex items-center flex-wrap justify-center">
        <%= link_to new_user_path, class: "nav-link mr-2" do %>
          <div style="display: flex; flex-direction: column; align-items: center;">
            <i class="fa-solid fa-user-plus" style="color: #050505;"></i>
            <p style="margin-top: 5px;"><%= (t'defaults.signin') %></p>
          </div>
        <% end %>
      </li>   
    </ul>
  </div>
</div>
</header>
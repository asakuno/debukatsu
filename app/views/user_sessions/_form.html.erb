<%= form_with url: login_path, method: :post do |f| %>
  <div class="input-group-md">
    <%= f.label :email, User.human_attribute_name(:email) %><br />
    <%= f.text_field :email, class: "input input-bordered w-full max-w-xs", placeholder: "Type Email" %>
  </div>
  <div class="input-group-md">
    <%= f.label :password, User.human_attribute_name(:password) %><br />
    <%= f.password_field :password, class: "input input-bordered w-full max-w-xs", placeholder: "Type Password" %>
  </div>
  <div class="actions">
    <%= f.submit (t'defaults.login'), class:"btn btn-primary" %>
  </div>
<% end %>
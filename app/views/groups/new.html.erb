<div class="form-control">
  <%= form_with(model: @group, local: true, group_id: @group.id) do |form| %>
  <div class="input-group-md">
    <%= form.label :group_name %>
    <%= form.text_field :group_name, class: "input input-bordered w-full max-w-xs" %>
  </div>

  <div class="input-group-md">
    <%= form.label :maximum_amount %>
    <%= form.number_field :maximum_amount, id: "maximum_amount_value", class: "input input-bordered w-full max-w-xs", in: 100...3000001, step: 100 %>
    <span id="value_display">100</span>å††
    <%= form.range_field :maximum_amount, in: 100...3000001, id: 'maximum_amount_input',class: "range range-xs range-primary", step: 100 %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>

  <div class="input-group-md">
    <div class="not-prose grid grid-cols-1 gap-x-6 gap-y-12 sm:grid-cols-2 lg:grid-cols-3">
      <%= form.collection_check_boxes(:food_ids, @foods, :id, :food_name) do |food| %>
      <div class="card w-96 bg-base-100 shadow-xl">
        <div class="card-body">
          <%= food.label( class: "check_box" ) { food.check_box(checked: true) } %>
          <h2 class="card-title">
            <%= food.object.food_name %>
          </h2>
          <%= food.object.calorie %>kcal
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <% end %>
</div>

<%= link_to 'Back', groups_path %>

<%= javascript_pack_tag 'groups/new' %>

<div class="mb-2">
  <%= link_to t('.new_group'), new_group_path, class: "btn btn-primary" %>
  <%= link_to t('.foods') , foods_path, class: "btn btn-secondary" %>
</div>
<div class="md:flex flex-col gap-6">
  <div class="not-prose grid grid-cols-1 gap-x-6 gap-y-12 sm:grid-cols-2 lg:grid-cols-3">
    <% @groups.each do |group| %>
    <div class="card w-96 bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">
          <%= link_to "#{group.group_name}", group_path(group) %><br>
        </h2>
        <p>合計: <%= group.foods.sum { |hash| hash[:calorie]} %>kcal</p><br>
        <%= group.user.name %><br>
      </div>
      <% if group.comments.present? %>
        <i class="fa fa-commenting"></i><%= group.comments.count %>
      <% else %>
        <i class="fa fa-comment"></i>
      <% end %>
      <% if current_user.own?(group) %>
        <div class="flex justify-end items-end">
          <%= link_to 'Destroy', group_path(group), method: :delete, data: { confirm: 'Are you sure?' }, class:"py-2 px-4 bg-black hover:bg-purple-700 focus:ring-purple-500 focus:ring-offset-purple-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 rounded-lg" %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <%= paginate @groups %>
</div>





  
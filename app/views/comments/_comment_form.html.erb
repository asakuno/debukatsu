<%= form_with model: comment, url: [group, comment], local: true do |f| %>
  <%= f.text_area :body, class: 'textarea textarea-primary w-full py-2 px-4 border border-gray-400 rounded-lg', id: 'js-new-comment-body', row: 4, placeholder: "コメントを100文字以内で入力してください" %>
  <%= f.submit "コメント投稿", class: 'btn btn-primary' %>
<% end %>